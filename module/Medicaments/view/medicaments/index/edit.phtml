<?php
$title = 'Edit drug (id ' . $id . ')';
$this->headTitle($title);
echo '<h1>' . $this->escapeHtml($title) . '</h1>';

$form = $this->form;
$form->setAttribute('action', $this->url('medicaments', array('action' => 'edit', 'id' => $this->id,)));

$form->prepare();
echo $this->form()->openTag($form);

echo $this->formHidden($form->get('id'));
echo $this->formRow($form->get('name'));
echo $this->formRow($form->get('molecule'));
echo $this->formRow($form->get('indications'));
echo $this->formRow($form->get('cons_indications'));
echo $this->formSubmit($form->get('submit'));

echo $this->form()->closeTag();
?>